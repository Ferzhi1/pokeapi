@model List<api3.Models.SolicitudAmistad>

<div class="container text-center mt-5">
    <h2 class="mb-4">📩 Solicitudes de Amistad</h2>

    <p>Email del usuario: <strong>@ViewBag.EmailUsuario</strong></p>
    <input type="hidden" id="emailUsuario" value="@ViewBag.EmailUsuario" />

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Remitente</th>
                    <th>Fecha de envío</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var solicitud in Model)
                {
                    <tr id="solicitud-@solicitud.Id">
                        <td>@solicitud.RemitenteEmail</td>
                        <td>@solicitud.FechaEnvio.ToString("yyyy-MM-dd HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">⚠ No tienes solicitudes pendientes.</p>
    }
</div>
