@model List<api3.Models.SolicitudAmistad>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Solicitudes de Amistad</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
</head>
<body>

    <h2>Solicitudes de Amistad Pendientes</h2>

   
    <a asp-controller="SolicitudAmistad" asp-action="EnviarSolicitud">
        <button style="padding: 10px 15px; font-size: 16px; cursor: pointer;">
            ➕ Enviar Solicitud de Amistad
        </button>
    </a>

    @if (Model != null && Model.Any())
    {
        <ul>
            @foreach (var solicitud in Model)
            {
                <li>
                    De: <strong>@solicitud.RemitenteEmail</strong>

                    <form method="post" asp-controller="SolicitudAmistad" asp-action="AceptarSolicitud" asp-route-id="@solicitud.Id">
                        <button type="submit">✅ Aceptar</button>
                    </form>

                    <form method="post" asp-controller="SolicitudAmistad" asp-action="RechazarSolicitud" asp-route-id="@solicitud.Id">
                        <button type="submit">❌ Rechazar</button>
                    </form>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No tienes solicitudes pendientes.</p>
    }

    <script src="/js/SolicitudesAmistad.js"></script>

</body>
</html>
