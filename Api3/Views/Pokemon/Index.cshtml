@using api3.Models
@model List<MazoPokemon>
<!-- Navbar responsive -->
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Pokémon Store</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link active" href="#">Inicio</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Mazos</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Contacto</a></li>
            </ul>
        </div>
    </div>
</nav>

<!-- Header con imagen -->
<header class="pokemon-header">
    <img src="/img/headerPokemon.jpg" alt="Pokémon Store">
</header>


<!-- Contenedor de mazos -->
<div class="container text-center mt-5">
    <h2 class="mb-4">Compra tu Mazo Pokémon</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        <!-- Distribución uniforme -->
        @foreach (var mazo in Model)
        {
            <div class="col">
                <div class="card shadow-sm">
                    <img src="@mazo.ImagenUrl" class="card-img-top mazo-img" alt="@mazo.Nombre">
                    <div class="card-body">
                        <h5 class="card-title">@mazo.Nombre</h5>
                        <p class="card-text">Precio: $@mazo.Precio</p>
                        <a asp-controller="Pedido" asp-action="Checkout" asp-route-nombre="@mazo.Nombre" class="btn btn-primary">Comprar</a>



                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Footer -->
<footer class="pokemon-footer text-center mt-5">
    <p>© 2025 Pokémon Store. Todos los derechos reservados.</p>
    <p><a href="#">Términos y condiciones</a> | <a href="#">Política de privacidad</a></p>
</footer>





