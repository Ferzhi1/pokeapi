@using api3.Models
@model List<MazoPokemon>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pokémon Store</title>
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
    <header class="hero">
        <div class="hero-content">
            <h1>TIENDA DE <span>MAZOS POKEMON</span></h1>
            <h1>¡Atrapa tu Mazo Pokémon!</h1>
            <p>Explora y consigue cartas exclusivas.</p>

            <a asp-controller="SolicitudAmistad" asp-action="ListaSolicitudes" class="btn btn-secondary">
                📌 Ver Solicitudes de Amistad
            </a>
        </div>
    </header>

    <div class="main-container">
        <div class="mazos-container">
            @foreach (var mazo in Model)
            {
                <div class="mazo-card">
                    <img src="@mazo.ImagenUrl" alt="@mazo.Nombre">
                    <h2>@mazo.Nombre</h2>
                    <p>Precio: $@mazo.Precio</p>
                    <a asp-controller="Pedido" asp-action="Checkout" asp-route-nombre="@mazo.Nombre"
                       class="btn btn-primary">Comprar</a>
                </div>
            }
        </div>
    </div>

</body>
</html>
